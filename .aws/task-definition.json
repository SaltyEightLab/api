{
    "containerDefinitions": [
      {
        "name": "web",
        "image": "<image>",
        "cpu": 0,
        "memoryReservation": 512,
        "portMappings": [
          {
            "containerPort": 3000,
            "hostPort": 3000,
            "protocol": "tcp"
          }
        ],
        "essential": true,
        "entryPoint": [],
        "command": [],
        "environment": [],
        "mountPoints": [],
        "volumesFrom": [],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/sacicd-web",
            "awslogs-region": "ap-northeast-1",
            "awslogs-stream-prefix": "web"
          }
        },
        "dependsOn": [
          {
            "containerName": "api",
            "condition": "HEALTHY"
          }
        ],
        "readonlyRootFilesystem": false,
        "healthCheck": {
          "command": [
            "CMD-SHELL",
            "curl -f http://localhost:3000/ || exit 1"
          ],
          "interval": 30,
          "timeout": 5,
          "retries": 3,
          "startPeriod": 10
        }
      },
      {
        "name": "api",
        "image": "<image>",
        "cpu": 0,
        "memoryReservation": 512,
        "portMappings": [
          {
            "containerPort": 8080,
            "hostPort": 8080,
            "protocol": "tcp"
          }
        ],
        "essential": true,
        "entryPoint": [],
        "command": [],
        "environment": [],
        "mountPoints": [],
        "volumesFrom": [],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/sacicd-api",
            "awslogs-region": "ap-northeast-1",
            "awslogs-stream-prefix": "api"
          }
        },
        "healthCheck": {
          "command": [
            "CMD-SHELL",
            "curl -f http://localhost:8080/api/hello || exit 1"
          ],
          "interval": 10,
          "timeout": 5,
          "retries": 5,
          "startPeriod": 10
        }
      }
    ],

    "family": "sacicd-def",
    "executionRoleArn": "ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "volumes": [],
    "placementConstraints": [],
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "512",
    "memory": "2048"
  }